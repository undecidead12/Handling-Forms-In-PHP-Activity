<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order Management System</title>
    <style>
        body {font-family: Arial; max-width: 600px; margin: 40px auto; background: #f0f0f0;}
        h1, h2 {text-align: center;}
        .container {background: white; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);}
        input, button {width: 100%; padding: 10px; margin: 10px 0; box-sizing: border-box;}
        button {background: #28a745; color: white; border: none; cursor: pointer;}
        table {width: 100%; border-collapse: collapse; margin: 20px 0;}
        th, td {padding: 10px; border: 1px solid #ccc; text-align: center;}
        input[type=number] {width: 70px;}
        .total {font-size: 20px; text-align: right;}
        .link {text-align: center; margin: 10px 0;}
        .error {color: red; text-align: center;}
        .logout {text-align: right; margin-bottom: 20px;}
    </style>
</head>
<body>

<?php
session_start();

$host = 'localhost';
$user = 'root';
$pass = '';
$db = 'order_system';

$conn = new mysqli($host, $user, $pass, $db);
if ($conn->connect_error) die("Connection failed");

$conn->query("CREATE DATABASE IF NOT EXISTS $db");
$conn->select_db($db);

$conn->query("CREATE TABLE IF NOT EXISTS users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50) UNIQUE,
    password VARCHAR(255)
)");

$items = ["Burger" => 50, "Pizza" => 150, "Fries" => 30, "Drink" => 20];
$message = "";
$page = $_GET['page'] ?? 'login';

if ($page === 'register' && $_SERVER["REQUEST_METHOD"] == "POST") {
    $username = $conn->real_escape_string($_POST['username']);
    $password = password_hash($_POST['password'], PASSWORD_DEFAULT);
    if ($conn->query("INSERT INTO users (username, password) VALUES ('$username', '$password')")) {
        $page = 'login';
        $message = "Registration successful. Please login.";
    } else {
        $message = "Username already exists.";
    }
}

if ($page === 'login' && $_SERVER["REQUEST_METHOD"] == "POST") {
    $username = $conn->real_escape_string($_POST['username']);
    $result = $conn->query("SELECT * FROM users WHERE username='$username'");
    if ($row = $result->fetch_assoc()) {
        if (password_verify($_POST['password'], $row['password'])) {
            $_SESSION['user'] = $username;
            $page = 'order';
        } else {
            $message = "Invalid password.";
        }
    } else {
        $message = "Username not found.";
    }
}

if (isset($_GET['logout'])) {
    session_destroy();
    $page = 'login';
}
?>

<div class="container">

<?php if ($page === 'login' || $page === 'register'): ?>
    <h1><?php echo $page === 'register' ? 'Register' : 'Login'; ?></h1>
    <p class="error"><?php echo $message; ?></p>
    <form method="post">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit"><?php echo $page === 'register' ? 'Register' : 'Login'; ?></button>
    </form>
    <div class="link">
        <?php if ($page === 'login'): ?>
            No account? <a href="?page=register">Register here</a>
        <?php else: ?>
            Have account? <a href="?page=login">Login here</a>
        <?php endif; ?>
    </div>

<?php elseif ($page === 'order' && isset($_SESSION['user'])): ?>
    <h1>Food Order System</h1>
    <div class="logout">Welcome, <?php echo $_SESSION['user']; ?> | <a href="?logout=1">Logout</a></div>

    <form method="post" action="?page=order">
        <table>
            <tr><th>Item</th><th>Price</th><th>Quantity</th></tr>
            <?php foreach ($items as $name => $price): ?>
            <tr>
                <td><?php echo $name; ?></td>
                <td><?php echo $price; ?></td>
                <td><input type="number" name="<?php echo $name; ?>" min="0" value="<?php echo $_POST[$name] ?? 0; ?>"></td>
            </tr>
            <?php endforeach; ?>
        </table>
        <button type="submit">Calculate Total</button>
    </form>

    <?php
    $total = 0;
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
        foreach ($items as $name => $price) {
            $qty = intval($_POST[$name] ?? 0);
            if ($qty > 0) {
                echo "<p>$name x $qty = " . ($qty * $price) . "</p>";
                $total += $qty * $price;
            }
        }
        if ($total > 0) echo '<div class="total">Total: ' . $total . '</div>';
    }
    ?>

<?php else: header("Location: ?page=login"); endif; ?>

</div>

</body>
</html>
