<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Simple Food Order</title>
    <style>
        body { font-family: Arial; max-width: 600px; margin: 40px auto; background: #f9f9f9; }
        h1 { text-align: center; }
        table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
        th, td { padding: 10px; border: 1px solid #ccc; text-align: center; }
        input[type="number"] { width: 60px; padding: 5px; }
        button { padding: 10px 20px; background: #28a745; color: white; border: none; cursor: pointer; font-size: 16px; }
        .total { font-size: 20px; text-align: right; margin: 20px 0; }
    </style>
</head>
<body>

<h1>Food Order</h1>

<?php
$items = [
    "Burger" => 50,
    "Pizza" => 150,
    "Fries" => 30,
    "Drink" => 20
];

$total = 0;

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    foreach ($items as $name => $price) {
        $qty = intval($_POST[$name] ?? 0);
        if ($qty > 0) {
            $subtotal = $qty * $price;
            $total += $subtotal;
            echo "<p>$name x $qty = $subtotal</p>";
        }
    }
}
?>

<form method="post">
    <table>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
        <?php foreach ($items as $name => $price): ?>
        <tr>
            <td><?php echo $name; ?></td>
            <td><?php echo $price; ?></td>
            <td><input type="number" name="<?php echo $name; ?>" min="0" value="0"></td>
        </tr>
        <?php endforeach; ?>
    </table>
    
    <button type="submit">Calculate Total</button>
</form>

<?php if ($_SERVER["REQUEST_METHOD"] == "POST" && $total > 0): ?>
    <div class="total">Total Price: <?php echo $total; ?></div>
<?php elseif ($_SERVER["REQUEST_METHOD"] == "POST"): ?>
    <div class="total">No items ordered.</div>
<?php endif; ?>

</body>
</html>
